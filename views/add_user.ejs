<%- include('layout/header') %>

<div id="container">
    <div id="form-section">
        <div id="section-1">
            <h1 style="display: block;text-align: center;background-color: #36f5b5;">Add New User</h1>   
        </div>
        <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
            <div id="pt-1" class="frm">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter Name">
            </div>
            <div id="pt-2" class="frm">
                <label for="email">Email</label>
                <input type="Email" name="email" placeholder="Enter Email">
            </div>
            <div id="pt-3" class="frm">
                <label for="phone">Phone</label>
                <input type="number" name="phone" id="" placeholder="Enter phone">
            </div>
            <div id="pt-4" class="frm">
                <label for="Address">Address</label>
                <input type="text" name="address" id="" placeholder="Enter address">
            </div>
            <div id="pt-5" class="frm">
                <label for="image"></label>
                <input type="file" name="image" id="image">
            </div>
            <button type="submit" name="submit" class="btn">Submit</button>
        </form>
    </div>
</div>

<%- include('layout/footer')%>