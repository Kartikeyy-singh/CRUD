<%- include('layout/header') %>

<div id="container">
    <div id="form-section-edit">
        <div id="section-1">
            <h1 style="display: block;text-align: center;background-color: #36f5b5;">Edit User <%=userinfo.name%></h1>   
        </div>
        <form action="/update/<%= userinfo._id %>" method="post" id="add-form" enctype="multipart/form-data">
            <div id="pt-1" class="frm">
                <label for="name">Name</label>
                <input type="text" name="name" value="<%=userinfo.name%>" placeholder="Enter Name">
            </div>
            <div id="pt-2" class="frm">
                <label for="email">Email</label>
                <input type="Email" name="email" value="<%=userinfo.email   %>" placeholder="Enter Email">
            </div>
            <div id="pt-3" class="frm">
                <label for="phone">Phone</label>
                <input type="number" name="phone" value="<%=userinfo.phonenumber%>" id="" placeholder="Enter phone">
            </div>
            <div id="pt-4" class="frm">
                <label for="Address">Address</label>
                <input type="text" name="address" value="<%=userinfo.address%>" id="" placeholder="Enter address">
            </div>
            <div id="pt-5" class="frm">
                <label for="image"></label>
                <input type="file" name="image" id="">
            </div>
            <img src="/<%=userinfo.photo%>" style="width:50px; padding-left: 10px;">
            <br>
            <!-- <img src="<%=userinfo.photo%>"> -->
            <button type="submit" name="submit" class="btn">Update</button>
        </form>
    </div>
</div>

<%- include('layout/footer')%>